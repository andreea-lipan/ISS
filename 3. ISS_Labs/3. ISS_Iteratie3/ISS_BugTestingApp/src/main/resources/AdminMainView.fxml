<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminMainController">
   <children>
      <ListView fx:id="functionalitiesListView" layoutX="37.0" layoutY="98.0" prefHeight="146.0" prefWidth="227.0" />

      <ListView fx:id="bugsListView" layoutX="330.0" layoutY="98.0" prefHeight="146.0" prefWidth="254.0"/>

      <Label layoutX="37.0" layoutY="52.0" text="Testing functionalities:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="330.0" layoutY="52.0" text="Bugs:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>

      <Label fx:id="usernameLabel" layoutX="14.0" layoutY="14.0" text="Logged in as admin: username" />
      <!-- Testing functionality -->
      <Button layoutX="37.0" layoutY="257.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="227.0" style="-fx-background-color: #DBDBFF;" text="Sort testing functionalities" />
      <Button onAction="#addFunctionality" layoutX="37.0" layoutY="290.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="227.0" style="-fx-background-color: #80FF80;" text="Add testing functionality" />
      <Button onAction="#updateFunctionality" layoutX="37.0" layoutY="326.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="227.0" style="-fx-background-color: #FFFFA4;" text="Update selected functionality" />
      <Button onAction="#removeFunctionality" layoutX="37.0" layoutY="359.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="227.0" style="-fx-background-color: #FF8080;" text="Remove selected functionality" />
      <!-- Bug -->
      <Button onAction="#sortBugs" layoutX="330.0" layoutY="257.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="254.0" style="-fx-background-color: #DBDBFF;" text="Sort bugs" />
      <Button onAction="#addBug" layoutX="330.0" layoutY="290.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="254.0" style="-fx-background-color: #80FF80;" text="Add bug" />
      <Button onAction="#updateBugHandler" layoutX="330.0" layoutY="326.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="254.0" style="-fx-background-color: #FFFFA4;" text="Update selected bug" />
      <Button onAction="#removeBugHandler" layoutX="330.0" layoutY="359.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="254.0" style="-fx-background-color: #FF8080;" text="Remove selected bug" />

      <Button layoutX="534.0" layoutY="10.0" mnemonicParsing="false" style="-fx-background-color: e0b0ff;" text="Log out" />


   </children>
</AnchorPane>
